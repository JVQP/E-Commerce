<main>
  <div class="banner-img">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
          aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
          aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
          aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/img/banner1.png" class="d-block w-100" alt="Computadores">
        </div>
        <div class="carousel-item">
          <img src="/img/Banner2.png" class="d-block w-100" alt="Celulares">
        </div>
        <div class="carousel-item">
          <img src="/img/banner3.jpg" class="d-block w-100" alt="...">
        </div>
      </div>
    </div>
  </div>

  </div>
  <div class="container-recomend">

    <h3 class="container-tittle">Nossos produtos, Confira já !!!</h3>

    <div class="container-img">

      <div class="img-produtos">
        <div class="">
          <img src="/img/Notebook.jpg" alt="Notebook" class="image">
          <br>
          <div class="btn">
            <button type="button" class="btn btn-primary">Venha conferir</button>
          </div>

        </div>

        <div class="">
          <img src="/img/Teclado e Mouse.jpg" alt="Teclados e Mouse´s" class="image">
          <br>
          <div class="btn">
            <button type="button" class="btn btn-primary">Venha conferir</button>
          </div>
        </div>

        <div class="">
          <img src="/img/Fone.jpg" alt="Fones" class="image">
          <br>
          <div class="btn">
            <button type="button" class="btn btn-primary">Venha conferir</button>
          </div>
        </div>

        <div class="">
          <img src="/img/Impressora.jpeg" alt="Impressoras" class="image">
          <br>
          <div class="btn">
            <button type="button" class="btn btn-primary">Venha conferir</button>
          </div>

        </div>

      </div>

    </div>

    <div class="barra-pesquisa">

      <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="O que procura?" aria-label="Search">
            <button class="btn btn-outline-primary" type="submit">Pesquisar</button>
          </form>
        </div>
      </nav>

    </div>


    {{#each produtos}}

    <div class="container">
      <div class="row d-flex">
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card" style="width: 18rem;">
            <img src="/img/{{imagem}}" class="card-img-top" alt="{{produto}}">
            <div class="card-body">
              <h5 class="card-title">{{produto}}</h5>
              <p class="card-text"><strong>R$ {{preco}}</strong></p>
              <div class="d-grid gap-2">
                <button class="btn btn-primary" type="button">Comprar</button>
                <button class="btn btn-warning" type="button">Adicionar ao carrinho</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {{/each}}

</main>