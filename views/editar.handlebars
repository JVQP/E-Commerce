    <div class="row" id="#row_editar">

      {{#each produtos}}

      <form action="/editar" method="post" id="editar" enctype="multipart/form-data">

        <input type="hidden" name="imagemAntiga" value="{{imagem}}">
        <input type="hidden" value="{{id}}" name="editar_id">
        <div class="card" style="width: 18rem;">
          <img src="/img/{{imagem}}" class="card-img-top" alt="Fone de ouvido"> <input type="file" class="form-control"
            name="imagem">
          <div class="card-body">
            <label for="" class="form-label"><strong>Produto <input type="text" value="{{produto}}" class="form-control"
                  name="editar_produto"></strong></label>
            <p class="card-text"><strong>R$ <input type="text" class="form-control" value="{{preco}}"
                  name="editar_preco"></strong></p>
            <div class="d-grid gap-2" id="d-grid gap-2">
              <input type="submit" class="btn btn-danger" value="Alterar" onclick="alterar(event)">
              <a href="/administrador" class="btn btn-warning">Cancelar</a>

      </form>

      {{/each}}
