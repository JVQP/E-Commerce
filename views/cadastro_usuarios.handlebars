<main>

  <div class="container" id="container-cadastro">

    <div class="row">
      <div class="col-6" id="cadastro">

      </div>
      <div class="col-6" id="input-cadastroa">
        <h1 class="titulo-cadastro">Criar conta</h1>

        <form action="/cadastrar_usuarios" method="post">
          <label for="inputEmail" class="form-label">Email: </label>
          <input type="email" name="inputEmail" class="form-control" id="inputEmail">
          <label for="inputPassowrd" class="form-label">Senha: </label>
          <input type="password" name="inputPassword" class="form-control" id="inputPassword">
          <label for="inputConfirm" class="form-label">Confirmar senha: </label>
          <input type="password" name="inputConfirm" class="form-control" id="inputConfirm">
          <input type="checkbox" name="inputAdm" id="inputAdm" value='Administrador'> Administrador
          <br>
          <input type="checkbox" name="inputCliente" id="inputCliente" value="Cliente"> Cliente
          <br>
          <div class="button-cadastro">

            <input type="submit" class="btn btn-primary" value="Cadastrar">
            <input type="reset" class="btn btn-warning" value="Limpar">
          </div>

    {{#if mensagem_erro}}
        <div class="alert alert-warning" id="mensagem" role="alert">
              <p>{{mensagem_erro}}</p>
        </div>

        {{/if}}

{{#if mensagem_erro_senha}}

 <div class="alert alert-secundary" id="mensagem" role="alert">
              <p>{{mensagem_erro_senha}}</p>
        </div>

{{/if}}

{{#if mensagem_erro_email}}

<div class="alert alert-danger" id="mensagem" role="alert">
              <p>{{mensagem_erro_email}}</p>
        </div>
{{/if}}

{{#if mensagem_sucesso}}

   <div class="alert alert-success" id="mensagem" role="alert">
              <p>{{mensagem_sucesso}}</p>
        </div>
{{/if}}

{{#if mensagem_erro_cadastro}}

<div class="alert alert-danger" id="mensagem" role="alert">
              <p>{{mensagem_erro_cadastro}}</p>
        </div>

{{/if}}
